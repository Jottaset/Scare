<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Scare"
             x:Class="Scare.MainPage">
    
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Agora Sim!!!"
               FontSize="25"
               FontFamily="KaushanScript-Regular.ttf#KaushanScript-Regular"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               x:Name="label_mensagem"
               />
        
        
        <Button Text="Click"
                FontSize="15"
                FontFamily="SpecialElite-Regular.ttf#SpecialElite"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                x:Name="button_scare"
                Clicked="Handle_Clicked"
        
               />
    </StackLayout>
</ContentPage>